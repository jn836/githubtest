def calcular(val1, val2, oper):
    reult = 0
    if val1 and val2:
        if oper in '+*-/':
            if oper == '+':
                resulta = val1 + val2
            elif oper == '-':
                resulta = val1 - val2
            elif oper == '*':
                resulta = val1 * val2
            elif oper == '/':
                resulta = val1 / val2

    return resulta

def calculadora():
    while(True):
        a = float(input('digite o primeiro valor: '))
        b = float(input('digite o segundo valor: '))
        operacao = input ('qual operação?: ')

        if operacao =='sair':
            print("Obrigado por usar nosso sistema...")
            break
        else:
        calcular()
